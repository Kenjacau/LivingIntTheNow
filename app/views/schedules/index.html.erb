<p id="notice"><%= notice %></p>

<h1>Schedules</h1>

<table>
  <thead>
    <tr>
      <th>Schedule ID</th>
      <th>User</th>
      <th>Position</th>
      <th>Available</th>
      <th>Date</th>
      <th>Starttime</th>
      <th>Endtime</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.id %></td>
        <td><%= schedule.user.firstName + " " + schedule.user.lastName %></td>
        <td><%= schedule.position.name %></td>
        <td><%= schedule.available %></td>
        <td><%= schedule.date %></td>
        <td><%= schedule.startTime %></td>
        <td><%= schedule.endTime %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

